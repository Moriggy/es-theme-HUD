<theme>

	<formatVersion>4</formatVersion>

	<feature supported="carousel">
	
		<view name="system">
		
			<!-- Imagen de fondo estatica -->
			
			<image name="background" extra="true">
				<path>./_art/fondo.png</path>
				<maxSize>1 1</maxSize>
				<pos>0 0</pos>
				<zIndex>1</zIndex>
			</image>
			
			<!-- Logo de sistema -->
			
			<image name="logo">
				<path>./_art/logos/${system.theme}/logo.png</path>
			</image>
			
			<!-- Neon consola -->
			
			<image name="console" extra="true">
				<path>./_art/logos/${system.theme}/console.png</path>
				<maxSize>0.500 0.500</maxSize>
				<pos>0.325 0.16</pos>
				<color>FFFFFF</color>
				<zIndex>2</zIndex>
			</image>
	
			<!-- Modo de vista de los sistemas -->
			
			<carousel name="systemcarousel">
				<type>horizontal</type>
				<pos>0 -0.08</pos>
				<size>1 1</size>
				<color>ffffff00</color>
				<logoScale>1.7</logoScale>
				<logoSize>0.18 0.3</logoSize>
				<maxLogoCount>3</maxLogoCount>
				<logoAlignment>bottom</logoAlignment>
				<zIndex>2</zIndex>
			</carousel>
					
			<!-- Numero de juegos del sistema -->
			
			<text name="systemInfo">		
				<backgroundColor>ffffff00</backgroundColor>
				<color>ffffff</color>
				<pos>0.265 0.88</pos>
				<size>0.47 0.20</size>
				<fontPath>./_art/moonhouse.ttf</fontPath>
				<fontSize>0.03</fontSize>
				<zIndex>2</zIndex>
			</text>
			
			<!-- Texto info sistema -->
			
			<helpsystem name="help">
				<pos>1 1</pos>
				<textColor>ffffff</textColor>
				<iconColor>ffffff</iconColor>
				<fontPath>./_art/moonhouse.ttf</fontPath>
				<fontSize>0.020</fontSize>
			</helpsystem>
			
		</view>
	
	</feature>
		
	<view name="basic, detailed, video">
	
		<!-- Fondo gamelist -->
		
		<image name="backgroundfilter" extra="true">		
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./_art/gamelist.png</path>
			<zIndex>1</zIndex>			
		</image>
		
		<!-- Logo sistema -->
		
		<image name="logo" extra="false">		
			<path>./_art/logos/${system.theme}/logo.png</path>
			<pos>0.75 0.02</pos>
			<size>0.25 0.1</size>
			<zIndex>2</zIndex>			
		</image>
	
		<!-- Texto del sistema -->

		<helpsystem name="help">
			<pos>0.04 0.985</pos>
			<iconColor>FFFFFF</iconColor>
			<textColor>FFFFFF</textColor>
			<fontSize>0.02</fontSize>
			<fontPath>./_art/moonhouse.ttf</fontPath>
		</helpsystem>
	
	</view>
	
	<view name="basic">
		
		<!-- Posicion de listado de juegos -->
		
		<textlist name="gamelist">		
			<selectorImagePath>./_art/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>719CC6</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<fontPath>./_art/moonhouse.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<fontSize>0.03</fontSize>
			<alignment>left</alignment>
			<pos>0.07 0.18</pos>
			<size>0.435 0.75</size>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.05</horizontalMargin>
			<scrollSound>./_art/scroll.wav</scrollSound>
			<zIndex>3</zIndex>			
		</textlist>
		
		<!-- Posicion y tamaño imagen juego -->

		<image name="md_image">
			<maxSize>0.35 0.46</maxSize>
			<pos>0.75 0.4</pos>
			<zIndex>3</zIndex>
		</image>
		
	</view>
	
	<view name="detailed">
	
		<!-- Posicion y tamaño imagen juego -->

		<image name="md_image">
			<maxSize>0.35 0.46</maxSize>
			<pos>0.75 0.4</pos>
			<zIndex>3</zIndex>
		</image>
		
	</view>
	
	<feature supported="video">
	
		<view name="video">
		
			<!-- Posicion y tamaño del video juego -->

			<video name="md_video">
				<maxSize>0.35 0.44</maxSize>
				<pos>0.755 0.4</pos>
				<delay>1.5</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
				<zIndex>3</zIndex>
			</video>
			
			<image name="md_marquee">
				<pos>0.29 0.068</pos>
				<size>0.145 0.085</size>
				<zIndex>3</zIndex>
			</image>
			
		</view>
		
	</feature>
			
	<view name="detailed,video">
	
		<!-- Posicion de listado de juegos -->
		
		<textlist name="gamelist">
			<selectorImagePath>./_art/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>719CC6</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<fontPath>./_art/moonhouse.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<fontSize>0.03</fontSize>
			<alignment>left</alignment>
			<pos>0.07 0.18</pos>
			<size>0.435 0.75</size>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.05</horizontalMargin>
			<scrollSound>./_art/scroll.wav</scrollSound>
			<zIndex>3</zIndex>				
		</textlist>

		<!-- Metadatos -->
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/moonhouse.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.12 0.04</size>
			<zIndex>3</zIndex>
		</text>
				
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite ,md_releasedate, md_lastplayed">
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/moonhouse.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.14 0.04</size>
			<zIndex>3</zIndex>
		</text>

		<!-- Descripcion juego -->
		
		<text name="md_description">
			<color>00d2f3</color>
			<pos>0.57 0.79</pos>
			<size>0.38 0.13</size>
			<fontPath>./_art/moonhouse.ttf</fontPath>
			<fontSize>0.018</fontSize>
			<forceUppercase>1</forceUppercase>
			<zIndex>3</zIndex>			
		</text>
		
		<!-- Posiciones info juegos -->
		
		<text name="md_lbl_rating">
			<pos>0.57 0.65</pos>
		</text>
		
		<rating name="md_rating">
			<pos>0.58 0.69</pos>
			<size>0.028 0.028</size>
			<filledPath>./_art/rating_empty.svg</filledPath>
			<unfilledPath>./_art/rating_filled.svg</unfilledPath>
		</rating>
		
		<text name="md_lbl_players">
			<pos>0.57 0.72</pos>
		</text>
		
		<text name="md_players">
			<pos>0.58 0.75</pos>			
		</text>
			
		<text name="md_lbl_genre">
			<pos>0.7 0.65</pos>
		</text>
		
		<text name="md_genre">
			<pos>0.71 0.69</pos>
		</text>
			
		<text name="md_lbl_releasedate">
			<pos>0.7 0.72</pos>
		</text>
		
		<datetime name="md_releasedate">
			<pos>0.71 0.75</pos>
		</datetime>
			
		<text name="md_lbl_developer">
			<pos>1 1</pos>
		</text>
		
		<text name="md_developer">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_publisher">
			<pos>1 1</pos>
		</text>
		
		<text name="md_publisher">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_lastplayed">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>
			
		<text name="md_lbl_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_lbl_favorite">
			<pos>1 1</pos>
		</text>
		
		<text name="md_favorite">
			<pos>1 1</pos>
		</text>
		
	</view>
	
</theme>
